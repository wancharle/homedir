<style-scheme id="django" _name="Django" version="1.0">
  <author>Bernd Essl</author>
  <_description>Color scheme in the colors of the Django webframework webpage</_description>

  <color name="dark-green"                         value="#092E20"/>
  <color name="light-green"                        value="#92CC47"/>
  <color name="green"                              value="#234F32"/>
  <color name="white"                              value="#FFFFFF"/>
  <color name="black"                              value="#000000"/>
  <color name="brown"                              value="#AB5603"/>
  <color name="yellow"                             value="#FDE661"/>
  <color name="grey"                               value="#808080"/>

  <!-- Global Settings -->
  <style name="text"                        foreground="white" background="dark-green"/>
  <style name="selection"                   foreground="black" background="yellow"/>
  <style name="cursor"                      foreground="white"/>
  <style name="current-line"                background="green"/>
  <style name="line-numbers"                foreground="white" background="green"/>

  <!-- Bracket Matching -->
  <style name="bracket-match"               foreground="black" background="#FFE761" bold="true"/>
  <style name="bracket-mismatch"            foreground="black" background="#FFE761" bold="true"/>

  <!-- Right Margin -->
  <style name="right-margin"                foreground="white" background="black"/>
  
  <!-- Search Matching -->
  <style name="search-match"                foreground="white" background="black"/>

  <!-- Comments -->
  <style name="def:comment"                 foreground="grey" italic="true"/>
  <style name="def:shebang"                 foreground="grey" bold="true"/>
  <style name="def:doc-comment-element"     italic="true"/>

  <!-- Constants -->
  <style name="def:constant"                foreground="yellow" bold="true"/>
  <style name="def:string"                  foreground="yellow"/>
  <style name="def:special-char"            foreground="yellow" bold="true"/>
  <style name="def:special-constant"        foreground="brown" bold="true"/>
  <style name="def:floating-point"          foreground="yellow"/>

  <!-- Identifiers -->
  <style name="def:identifier"              foreground="yellow"/>

  <!-- Statements -->
  <style name="def:statement"               foreground="light-green" bold="true"/>

  <!-- Types -->
  <style name="def:type"                    foreground="brown" bold="true"/> 

  <!-- Others -->
  <style name="def:preprocessor"            foreground="brown" bold="true" underline="true"/>
  <style name="def:error"                   foreground="white" background="black" bold="true"/>
  <style name="def:note"                    background="black" foreground="white" bold="true"/>
  <style name="def:underlined"              italic="true" underline="true"/>

</style-scheme>

